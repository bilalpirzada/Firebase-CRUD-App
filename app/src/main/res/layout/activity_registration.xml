<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <EditText
        android:id="@+id/idUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/idPassword"
        android:layout_below="@id/idUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Enter Your Password"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/idCnfPassword"
        android:layout_below="@id/idPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Confirm Password"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/idRegisterBtn"
        android:layout_below="@id/idCnfPassword"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@id/idCnfPassword"
        android:layout_alignRight="@id/idCnfPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_back"/>

    <TextView
        android:id="@+id/idTVLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idRegisterBtn"
        android:layout_alignLeft="@id/idRegisterBtn"
        android:layout_alignRight="@id/idRegisterBtn"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Already a user? Login here"
        android:textColor="@color/blue_shade_1"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/idProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>